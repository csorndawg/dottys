# module for defining bashrc exported Env. Variables 
# for simplicity, keep anything that modifies PATH at end and source last


# some examples 
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"
export XDG_RUNTIME_HOME="$HOME/.local/state/tmp"
export XDG_BIN_DIR="$HOME/.local/bin"
export XDG_DOCS_HOME="$HOME/.local/xdg_addons/docs"

export EDITOR=vim
export VISUAL=vim
